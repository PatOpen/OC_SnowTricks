{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block Masthead %}

    {% include ('layout/header.html.twig') %}

{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% if error %}
        <div class="container errors">
            <div class="alert alert-danger text-center">{{ error.messageKey | trans(error.messageData, 'security') }}</div>
        </div>
    {% endif %}

    <section class="page-section" id="connect">
        <div class="container card-contact">
            <div class="row justify-content-center">
                <h1 class="section-heading text-uppercase">Connexion</h1>
            </div>

            <form action="{{ path('login') }}" method="post" id="contactForm">
                <div class="row align-items-stretch mb-5 justify-content-center">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="email">Votre Email</label>
                            <input class="form-control" id="email" name="_username" type="email"
                                   placeholder="Votre adresse mail ..." value="{{ last_username }}" required/>
                        </div>
                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input class="form-control" id="password" name="_password" type="password"
                                   placeholder="Votre mot de passe ..." required/>
                        </div>
                    </div>

                </div>

                <div class="text-center">
                    <button class="btn btn-primary btn-xl text-uppercase" type="submit">Se connecter</button>
                </div>
                <div class="text-center">
                    <a href="{{ path('registration') }}#connect">Cr√©er un compte</a>
                </div>
            </form>
        </div>
    </section>

{% endblock %}



