{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container">

        <div class="row justify-content-center">
            <h1>Connexion</h1>
        </div>

        <form action="{{ path('security_login') }}" method="post">
            <div class="row align-items-stretch mb-5 justify-content-center">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="email">Votre Email</label>
                        <input class="form-control" id="email" name="_username" type="email"
                               placeholder="Votre adresse mail ..." required/>
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input class="form-control" id="password" name="_password" type="password"
                               placeholder="Votre mot de passe ..." required/>
                    </div>
                </div>

            </div>

            <div class="text-center">
                <button class="btn btn-primary btn-xl text-uppercase" id="sendMessageButton" type="submit">Se
                    connecter
                </button>
            </div>
            <div class="text-center">
                <a href="{{ path('security_registration') }}">Cr√©er un compte</a>
            </div>
        </form>
    </div>

{% endblock %}



