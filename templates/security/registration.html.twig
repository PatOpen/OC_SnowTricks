{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

    <section class="page-section" id="">
        <div class="container">
            <div class="text-center">
                <h2 class="section-heading text-uppercase">Inscription</h2>
            </div>

            {{ form_start(form) }}

            <div class="row align-items-stretch mb-5 justify-content-center">
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_row(form.pseudo, {'label': 'Nom d\'utilisateur','attr': {'placeholder': 'Votre pseudo ...','class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.email, {'label': 'Email','attr': {'placeholder': 'Votre adresse mail ...','class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.password, {'label': 'Mot de passe','attr': {'placeholder': 'Votre mot de passe ...','class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.confirm_password, {'label': 'Confirmation','attr': {'placeholder': 'Confirmez le mot de passe','class': 'form-control'}}) }}
                    </div>
                </div>
            </div>

            <div class="text-center">
                <button class="btn btn-primary btn-xl text-uppercase" id="sendMessageButton" type="submit">S'enregistrer</button>
            </div>
            {{ form_end(form) }}

        </div>
    </section>

{% endblock %}


