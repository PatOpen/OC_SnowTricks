{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block Masthead %}

    {% include ('layout/header.html.twig') %}

{% endblock %}

{% block body %}

    <section class="page-section" id="connect">
        <div class="container card-contact">
            <div class="row justify-content-center">
                <h2 class="section-heading text-uppercase">Inscription</h2>
            </div>

            {{ form_start(form, {'attr': {'id': 'contactForm'}}) }}
            {{ form_errors(form) }}
            <div class="row align-items-stretch mb-5 justify-content-center">
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_row(form.pseudo, {'attr': {'placeholder': 'Votre pseudo ...','class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.email, {'attr': {'placeholder': 'Votre adresse mail ...','class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.password, {'attr': {'placeholder': 'Votre mot de passe ...','class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.confirm_password, {'attr': {'placeholder': 'Confirmez le mot de passe','class': 'form-control'}}) }}
                    </div>
                </div>
             </div>

            <div class="text-center">
                <button class="btn btn-primary btn-xl text-uppercase" type="submit">S'enregistrer</button>
            </div>
            {{ form_end(form) }}

        </div>
    </section>

{% endblock %}


