{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block Masthead %}

    {% include ('layout/header.html.twig') %}

{% endblock %}

{% block body  %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <section class="page-section bg-light" id="trick">
        <div class="container">
            <div class="text-center">
                <h2 class="section-heading text-uppercase">Figures</h2>
                <h3 class="section-subheading text-muted">Figures de snowboard.</h3>
            </div>

            <div class="row div-tricks" data-number-tricks-pagination="{{ numberTricksPagination }}" data-url="/load-tricks/" data-total-tricks="{{ tricksTotal }}">
                    {% include('pages/tricks-home.html.twig') %}

                <div class="loader-container col-sm-12 d-flex justify-content-center" id="loader">
                    <button class="btn btn-outline-primary loader-btn">
                        Voir plus <i class="fas fa-arrow-down"></i><i class="fa fa-spinner fa-pulse fa-fw"></i>
                    </button>
                </div>
            </div>

        </div>
    </section>

{% endblock %}