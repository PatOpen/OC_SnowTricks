{% extends 'base.html.twig' %}

{% block title %}Créer une figure{% endblock %}

{% block body %}


    <section class="page-section" id="connect">
        <div class="container card-contact">
            <div class="row justify-content-center">
                <h2 class="section-heading text-uppercase">Créer une figure</h2>
            </div>

            {{ form_start(form) }}
            <div class="row align-items-stretch mb-5 justify-content-center">
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_row(form.title, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.image, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary btn-xl text-uppercase" type="submit">Enregistrer</button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}

        </div>
    </section>


{% endblock %}

