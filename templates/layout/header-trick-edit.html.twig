<header class="masthead" style="height: 50vh;background-image: url('{% if trick.banner is empty %}{{ asset('assets/img/trick-show-default.jpg') }}{% else %}{{ asset('uploads/trick/' ~ trick.banner) }}{% endif %}')">
    <div class="d-flex float-right">
        <span class="span-icon js-modal" id="modifier">
            <a href="{{ path('trick.banner', {slug: trick.slug}) }}">
            <i class="far fa-edit"></i>
            </a>
        </span>
        <span class="span-icon" id="supprimer">
            <a href="{{ path('trick.banner.delete', {slug: trick.slug}) }}"
               onclick="return confirm('Voulez-vous vraiment supprimer cette image?')">
                <i class="fas fa-trash-alt"></i>
            </a>
        </span>
    </div>
    <div class="container">
        <div class="masthead-subheading">Cat√©gorie: {{ trick.category.name }}</div>
        <div class="masthead-heading">{{ trick.title }}</div>
    </div>
</header>